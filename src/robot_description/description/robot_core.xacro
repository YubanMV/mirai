<?xml version="1.0" ?>
<robot name="robot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:include filename="inertial_macros.xacro"/>

  <material name="black">
    <color rgba="0.20 0.20 0.20 1.0"/>
  </material>
  <material name="blue">
    <color rgba="0.203125 0.23828125 0.28515625 1.0"/>
  </material>
  <material name="green">
    <color rgba="0.0 0.8 0.0 1.0"/>
  </material>
  <material name="grey">
    <color rgba="0.2 0.2 0.2 1.0"/>
  </material>
  <material name="orange">
    <color rgba="1.0 0.423529411765 0.0392156862745 1.0"/>
  </material>
  <material name="brown">
    <color rgba="0.870588235294 0.811764705882 0.764705882353 1.0"/>
  </material>
  <material name="red">
    <color rgba="0.80078125 0.12890625 0.1328125 1.0"/>
  </material>
  <material name="white">
    <color rgba="1.0 1.0 1.0 1.0"/>
  </material>
  
  
  
      <!--    BASE LINK   -->
  <link name="base_link"></link>  

      <!--    CHASSIS LINK   -->
  
  
  <link name="chassis">
    <visual>
      <origin xyz="0.13 0.0 0.045" rpy="0.0 0.0 0.0"/>
      <geometry>
        <box size="0.26 0.22 0.09"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin xyz="0.13 0.0 0.045" rpy="0.0 0.0 0.0"/>
      <geometry>
        <box size="0.26 0.22 0.09"/>
      </geometry>
    </collision>
    <xacro:inertial_box mass="0.5" x="0.26" y="0.22" z="0.09">
      <origin xyz="0.13 0.0 0.045" rpy="0.0 0.0 0.0"/>
    </xacro:inertial_box>
  </link>
  
  <joint name="chassis_joint" type="fixed">
    <parent link="base_link"/>
    <child link="chassis"/>
    <origin xyz="-0.08 0.0 0.0"/>
  </joint>
  
      
      <!--    LEFT WHEEL LINK   -->
  
  
  <joint name="left_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="0.0 0.13 0.0" rpy="-${pi/2} 0.0 0.0"/>
    <axis xyz="0 0 1"/>
  </joint>
  
  <link name="left_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.035" length="0.038"/>
      </geometry>
      <material name="white"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.035" length="0.038"/>
      </geometry>
    </collision>
    <xacro:inertial_cylinder mass="0.1" length="0.038" radius="0.035">
      <origin xyz="0 0 0" rpy="0.0 0.0 0.0"/>
    </xacro:inertial_cylinder>

  </link>

  
  
      <!--    right WHEEL LINK   -->
  

  <joint name="right_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="0.0 -0.13 0.0" rpy="${pi/2} 0.0 0.0"/>
    <axis xyz="0 0 -1"/>
  </joint>
  
  <link name="right_wheel">
    <visual name="">
      <geometry>
        <cylinder radius="0.035" length="0.038"/>
      </geometry>
      <material name="white"/>
    </visual>
    <collision name="">
      <geometry>
        <cylinder radius="0.035" length="0.038"/>
      </geometry>
    </collision>
    <xacro:inertial_cylinder mass="0.1" length="0.038" radius="0.035">
      <origin xyz="0 0 0" rpy="0.0 0.0 0.0"/>
    </xacro:inertial_cylinder>
  </link>
  
    <!-- CASTER WHEEL LINK -->

    <joint name="caster_wheel_joint" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel"/>
        <origin xyz="0.225 0 0"/>
    </joint>


    <link name="caster_wheel">
        <visual>
            <geometry>
                <sphere radius="0.035"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.035"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.035">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>

    <gazebo reference="caster_wheel">
      <material>
        Gazebo/Black
      </material>
      <mu1 value="0.001"/>  
      <mu2 value="0.001"/>
    </gazebo>





</robot>